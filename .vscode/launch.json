    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Python - PyDozor",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/opt/pydozor"
                    },
                    {
                        "localRoot": "${workspaceFolder}/.test_data",
                        "remoteRoot": "/opt/dozor/.test_data"
                    },
                    {
                        "localRoot": "${workspaceFolder}/.tmp_pydozor_output",
                        "remoteRoot": "/opt/pydozor/.tmp_pydozor_output"
                    }
                ],
                "justMyCode": false,
                "args": ["--master", "/opt/dozor/.test_data/testraster01_0008_master.h5", "-o", "/opt/pydozor/.tmp_pydozor_output", "-n", "10"]
            },
            "removeContainerAfterDebug": true
        }
    ]
}